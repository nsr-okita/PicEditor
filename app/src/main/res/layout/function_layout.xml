<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:txt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color">
    <Button
        android:id="@+id/trimming_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#777777"
        android:text="トリミング"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="2dp"
        txt:layout_constraintStart_toStartOf="parent"
        txt:layout_constraintEnd_toStartOf="@+id/setPen_button"
        txt:layout_constraintBottom_toBottomOf="parent"
        txt:layout_constraintHorizontal_chainStyle="spread"
        />

    <Button
        android:id="@+id/setPen_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#777777"
        android:text="ペン"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="1dp"
        txt:layout_constraintStart_toEndOf="@+id/trimming_button"
        txt:layout_constraintEnd_toStartOf="@+id/setColorTone_button"
        txt:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/setColorTone_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#777777"
        android:text="色調補正"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        txt:layout_constraintStart_toEndOf="@+id/setPen_button"
        txt:layout_constraintEnd_toStartOf="@+id/setStamp_button"
        txt:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/setStamp_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#777777"
        android:text="スタンプ"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="2dp"
        txt:layout_constraintStart_toEndOf="@+id/setColorTone_button"
        txt:layout_constraintEnd_toEndOf="parent"
        txt:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- ペン設定 -->
    <TableLayout
        android:id="@+id/pen_panel"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#777777"
        android:layout_marginBottom="2dp"
        txt:layout_constraintBottom_toTopOf="@+id/trimming_button"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/pen_save_button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#C0C0C0"
                android:text="完了"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:enabled="false"
                txt:layout_constraintRight_toLeftOf="parent"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="▽"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/weight_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="100"
                android:progress="10"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="10"
                android:layout_weight="2"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="R"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/red_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="255"
                android:progress="0"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="G"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/green_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="255"
                android:progress="0"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="B"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/blue_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="255"
                android:progress="0"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="A"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/alpha_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="255"
                android:progress="255"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="100"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>
    </TableLayout>

    <!-- 色調補正設定 -->
    <TableLayout
        android:id="@+id/tone_panel"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#777777"
        android:layout_marginBottom="2dp"
        txt:layout_constraintBottom_toTopOf="@+id/trimming_button"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/tone_save_button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#C0C0C0"
                android:text="完了"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:enabled="false"
                txt:layout_constraintRight_toLeftOf="parent"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="色調"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/hue_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="101"
                android:progress="51"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="0"
                android:layout_weight="2"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="彩度"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/chroma_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="101"
                android:progress="51"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="明度"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/brightness_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="101"
                android:progress="51"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="輝度"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/luminance_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="101"
                android:progress="51"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="0"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="#00000000"
                android:text="対比"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:enabled="false"
                android:gravity="center"
                />
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/contrast_seekbar"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:max="101"
                android:progress="51"
                android:layout_weight="9"
                />
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="0"
                android:layout_weight="2"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </TableRow>
    </TableLayout>

    <!-- スタンプ設定 -->
    <TableLayout
        android:id="@+id/stamp_panel"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#777777"
        android:layout_marginBottom="2dp"
        txt:layout_constraintBottom_toTopOf="@+id/trimming_button"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/stamp_save_button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#C0C0C0"
                android:text="完了"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:enabled="false"
                txt:layout_constraintRight_toLeftOf="parent"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>